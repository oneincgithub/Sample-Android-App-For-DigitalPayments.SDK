<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.digitalpayments.paymentform.android.sample">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".kotlinSample.KotlinSampleActivity"
                android:label="@string/app_name"
                android:parentActivityName=".MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.digitalpayments.paymentform.android.sample.MainActivity"/>
        </activity>
        <activity
                android:name=".kotlinSample.MakePaymentKotlinSampleActivity"
                android:label="@string/title_make_payment"
                android:parentActivityName=".kotlinSample.KotlinSampleActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.digitalpayments.paymentform.android.sample.kotlinSample.KotlinSampleActivity"/>
        </activity>
        <activity
                android:name=".kotlinSample.SavePaymentKotlinSampleActivity"
                android:label="@string/title_save_payment"
                android:parentActivityName=".kotlinSample.KotlinSampleActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.digitalpayments.paymentform.android.sample.kotlinSample.KotlinSampleActivity"/>
        </activity>
        <activity
                android:name=".SettingsActivity"
                android:label="@string/title_settings"
                android:parentActivityName=".MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.digitalpayments.paymentform.android.sample.MainActivity"/>
        </activity>
        <activity
                android:name=".javaSample.JavaSampleActivity"
                android:label="@string/app_name"
                android:parentActivityName=".MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.digitalpayments.paymentform.android.sample.MainActivity"/>
        </activity>
        <activity
                android:name=".javaSample.MakePaymentJavaSampleActivity"
                android:label="@string/title_make_payment"
                android:parentActivityName=".javaSample.JavaSampleActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.digitalpayments.paymentform.android.sample.javaSample.JavaSampleActivity"/>
        </activity>
        <activity
                android:name=".javaSample.SavePaymentJavaSampleActivity"
                android:label="@string/title_save_payment"
                android:parentActivityName=".javaSample.JavaSampleActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.digitalpayments.paymentform.android.sample.javaSample.JavaSampleActivity"/>
        </activity>
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>